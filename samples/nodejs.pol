// Essa política permite a execução de programas básicos em NodeJS em modo não
// interativo.

policy main {
    allow {
        execve,
        brk,
        arch_prctl,
        mmap,
        access,
        openat,
        newfstatat,
        close,
        read,
        pread64,
        set_tid_address,
        set_robust_list,
        rseq,
        mprotect,
        prlimit64,
        munmap,
        getrandom,
        futex,
        getuid,
        geteuid,
        getgid,
        getegid,
        rt_sigprocmask,
        fstat,
        rt_sigaction,
        fcntl,
        ioctl,
        getpid,
        epoll_create1,
        pipe2,
        write,
        eventfd2,
        clone3,
        epoll_ctl,
        epoll_wait,
        madvise,
        readlink,
        getcwd,
        statx,
        dup3,
        exit,
        exit_group,
    }
}
